{
  "manifest_version": 2,
  "homepage_url": "https://github.com/jessepollak/slash",
  "background": {
    "scripts": ["background/index.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "background",
    "tabs"
  ],
  "icons": {
    "16": "icons/slash-16.png",
    "32": "icons/slash-32.png",
    "128": "icons/slash-128.png"
  },
  "web_accessible_resources": [
    "icons/*"
  ],
  "content_security_policy": "media-src 'self';"
}
